#!/bin/sh

VERSION=96.106

echo
echo "   *** HERMES Reconstruction (HRC) configure script ***"
echo

CHECK_PINK_EXE="YES"
CHECK_HDB="YES"
CHECK_HDC="YES"
CHECK_MCARLO_DDL="YES"

# Call HERMES software autoconfigure script  
. ${HERMES_TOP:=/hermes}/conf/hermes_auto_conf

SED_VARIABLES="$SED_VARIABLES:VERSION"

# Create and execute config.status file 
. ${HERMES_TOP}/conf/config_status_shell  

echo
echo "---> Type"
echo "  make" 
echo "to compile"
echo "  make hrcset"
echo "to compile the X11 interface"
echo "  make install"
echo "to install the software in $HERMES_ROOT"
